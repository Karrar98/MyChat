<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextSend" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>>
        <item name="android:paddingLeft">@dimen/paddingLarge</item>
        <item name="android:paddingRight">@dimen/paddingNormal</item>
        <item name="android:paddingTop">@dimen/paddingNormal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRev">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rev_bg</item>
        <item name="android:padding">@dimen/paddingNormal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padddingSmall</item>
        <item name="android:paddingBottom">@dimen/padddingSmall</item>
    </style>

    <style name="TextTime.Rev">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="TextTime.Send">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="SeeMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/paddingNormal</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/ic_baseline_done_all_24</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.Rev">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="LinearLayout.Send">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:background">@drawable/send_bg</item>
    </style>

    <style name="LinearLayoutOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/paddingNormal</item>
        <item name="android:layout_margin">@dimen/paddingNormal</item>
        <item name="android:background">@drawable/action_bg</item>
    </style>

    <style name="SizeImageOption">
        <item name="android:layout_width">@dimen/sizeImageView</item>
        <item name="android:layout_height">@dimen/sizeImageView</item>
    </style>
</resources>